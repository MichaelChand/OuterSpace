<Page x:Class="RenderSystem.RenderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RenderSystem"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="750"
      x:Name="pgRenderViewPort"
      Title="RenderPage" HorizontalAlignment="Left" ScrollViewer.VerticalScrollBarVisibility="Disabled" Visibility="Hidden">

    <Grid x:Name="RenderGrid" VerticalAlignment="Top" HorizontalAlignment="Left" >
        <Canvas x:Name="cnvViewPort" x:FieldModifier="public" Width="800" Height="600" Margin="0,0,0,0" Background="Black" />
    </Grid>
</Page>
