<Page x:Class="OuterSpace.RenderSystem.RenderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OuterSpace.RenderSystem"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="750"
      Title="RenderPage" HorizontalAlignment="Left" ScrollViewer.VerticalScrollBarVisibility="Disabled">

    <Grid x:Name="RenderGrid" VerticalAlignment="Top" HorizontalAlignment="Left" >
        <Canvas x:Name="cnvViewPort" Width="{Binding ElementName=RenderGrid, Path=ActualWidth}" Height="{Binding ElementName=RenderGrid, Path=ActualHeight}" Margin="0,0,0,0" Background="Black" />
    </Grid>
</Page>
