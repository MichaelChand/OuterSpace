<Window x:Class="ConsoleOutput.OutputConsole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConsoleOutput"
        mc:Ignorable="d"
        Title="Console" Height="600" Width="800" Background="Blue" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid HorizontalAlignment="Left">
        <RichTextBox x:Name="rtbConsoleOutput" Height="530" Margin="1,1,1,0" VerticalAlignment="Top" Foreground="Yellow" Background="Blue" BorderBrush="Black" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" IsHitTestVisible="False">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Outer Space"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="btnSave" Content="SAVE" HorizontalAlignment="Left" Margin="709,541,0,0" VerticalAlignment="Top" Width="75" Click="btnSave_Click"/>
    </Grid>
</Window>
